<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CargaDatos</servlet-name>
        <servlet-class>server.CargaDatos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompruebaLogin</servlet-name>
        <servlet-class>server.CompruebaLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AltaNews</servlet-name>
        <servlet-class>server.AltaNews</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>server.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CargaDatos</servlet-name>
        <url-pattern>/CargaDatos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompruebaLogin</servlet-name>
        <url-pattern>/CompruebaLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AltaNews</servlet-name>
        <url-pattern>/AltaNews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>principal.jsp</welcome-file>
    </welcome-file-list>
</web-app>
